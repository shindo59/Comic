                </ul>
            </li>
            <li><a href="#">CONTACT US</a>
                <div class="hover-active"></div></li>
        </ul>
    </nav>

    <div id="navbtn">
        <a href="#">
            <img src="/Images/Icon/hide-menu.png" alt="responsive menu" />
        </a>
    </div>
    <!--Navigation Menu End-->
    <!--Logo-->
    <div class="logo">
        <a href="#"><img src="/Images/Icon/logo.png" alt="logo" /></a>
    </div>
    <!--Logo End-->
    <!--Social Media-->
    <nav class="social-main">
        <ul>
            <li><a href="#"><img src="/Images/Icon/social-icon-facebook.png" alt="Facebook" onMouseOver="this.src ='/Images/Icon/social-icon-facebook.png'" onMouseOut="this.src = '/Images/Icon/social-icon-facebook.png'" /></a></li>
            <li><a href="#"><img src="/Images/Icon/social-icon-twitter.png"  alt="Twitter" onMouseOver="this.src = '/Images/Icon/social-icon-twitter.png'" onMouseOut="this.src = '/Images/Icon/social-icon-twitter.png'" /></a></li>
            <li><a href="#"><img src="/Images/Icon/social-icon-pinterest.png"  alt="Pinterest" onMouseOver="this.src = '/Images/Icon/social-icon-pinterest.png'" onMouseOut="this.src = '/Images/Icon/social-icon-pinterest.png'" /></a></li>
            <li><a href="#"><img src="/Images/Icon/social-icon-google-plus.png"  alt="Google Plus" onMouseOver="this.src = '/Images/Icon/social-icon-google-plus.png'" onMouseOut="this.src = '/Images/Icon/social-icon-google-plus.png'" /></a></li>
            <li><a href="#"><img src="/Images/Icon/social-icon-feed.png"  alt="Feed" onMouseOver="this.src = '/Images/Icon/social-icon-feed.png'" onMouseOut="this.src = '/Images/Icon/social-icon-feed.png'" /></a></li>
        </ul>
    </nav>
</header>
<!--Main Menu End-->
 
<!--All Content Start-->
<div class="wrapper">
    @RenderBody()
    <hr />
    <footer>
        <p>&copy; @DateTime.Now.Year - My ASP.NET Application</p>
    </footer>
</div>
<!--All Content End-->

@Scripts.Render("~/bundles/jquery")
@Scripts.Render("~/bundles/bootstrap")
@RenderSection("scripts", required: false)
</body>
</html>
