                    <li>
                        <a href="#">HOME STYLE 3 (FULL GRID)</a>
                        <div class="submenu-bg"></div>
                        <ul>
                            <li><a href="#">THIRD LEVEL MENU</a>
                                <div class="submenu-bg"></div></li>
                            <li><a href="#">THIRD LEVEL MENU</a>
                                <div class="submenu-bg"></div></li>
                        </ul>
                    </li>
                </ul>
            </li>
            <li>
                <a href="#">ABOUT US</a>
                <div class="hover-active"></div>
                <ul>
                    <li><a href="#">STYLE 1 GRID HEADER</a>
                        <div class="submenu-bg"></div></li>
                    <li><a href="#">STYLE 2 FULLWIDTH IMAGE</a>
                        <div class="submenu-bg"></div></li>
                </ul>
            </li>
            <li>
                <a href="#">OUR SERVICES</a>
                <div class="hover-active"></div>
                <ul>
                    <li><a href="#">SERVICE STYLE 1</a>
                        <div class="submenu-bg"></div></li>
                    <li><a href="#">SERVICE STYLE 2</a>
                        <div class="submenu-bg"></div></li>
                </ul>
            </li>
            <li>
                <a href="#">PORTFOLIO</a>
                <div class="hover-active"></div>
                <ul>
                    <li><a href="#">PORTFOLIO SINGLE PAGE</a>
