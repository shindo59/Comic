@using System.Web.UI.WebControls
<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    <link href="~/Content/User/css/style.css" rel="stylesheet" type="text/css">
    <link href="~/Content/User/css/responsive.css" rel="stylesheet" type="text/css">
    <link href="~/Content/User/layerslider/css/layerslider.css" rel="stylesheet" type="text/css">
    <link href='http://fonts.googleapis.com/css?family=Open+Sans:400,300,600,700,800|Open+Sans+Condensed:300,700' rel='stylesheet' type='text/css'>

    @*@Styles.Render("~/Content/User/css")
    @Styles.Render("~/Content/User/layerslider/css")
    @Scripts.Render("~/Content/User/js")*@
    @*<link href="~/Content/User/layerslider/skins/borderlessdark3d/skin.css" rel="stylesheet" type="text/css">*@
